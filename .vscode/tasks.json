{
    "version": "2.0.0",
    "tasks": [
        {
            "type": "cppbuild",
            "label": "C/C++: Build",
            "command": "cl.exe",
            "args": [
                "/Zi",
                "/EHsc",
                "/nologo",
                "/Fe:",
                "${workspaceFolder}/build/${fileBasenameNoExtension}.exe",
                "${workspaceFolder}/src/main.cpp",
                "/I${workspaceFolder}/include",
                "${workspaceFolder}/lib/sfml-graphics.lib",
                "${workspaceFolder}/lib/sfml-system.lib",
                "${workspaceFolder}/lib/sfml-window.lib",
            ],
            "options": {
                "cwd": "${workspaceFolder}"
            },
            "problemMatcher": [
                "$msCompile"
            ],
            "group": {
                "kind": "build",
                "isDefault": true
            },
            "detail": "Task generated by Debugger."
        }
    ]
}